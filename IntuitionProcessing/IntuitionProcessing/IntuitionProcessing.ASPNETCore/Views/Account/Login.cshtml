@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity
@using IntuitionProcessing.Models.AccountViewModels
@using IntuitionProcessing.Models
@model LoginViewModel
@inject SignInManager<IntuitionUser> SignInManager

@{
	ViewData["Title"] = "Log in";
}

<div class="wrapper log-in"
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-4 col-lg-offset-4 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
					<div class="card log-in-card">
						<div class="header text-center log-in-header">
							<i class="ti-user" style="font-size: 60px; color: #94908C;"></i>
							<h3 class="title" style="margin-top: 10px; margin-bottom: 0;">Intuition Processing</h3>
							<br>
						</div>
						<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
							<div class="content">
								<div asp-validation-summary="All" class="text-danger"></div>
								<div class="row">
									<div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
										<div class="form-group">
											<label asp-for="Email">E-mail</label>
											<input asp-for="Email" type="text" class="form-control border-input" placeholder="E-mail">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
										<div class="form-group">
											<label asp-for="Password">Password</label>
											<input asp-for="Password" type="password" class="form-control border-input" placeholder="Password">
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<button type="submit" class="btn btn-default btn-block table-but btn-wd log-in-but">Sign in</button>
							</div>
						</form>
					</div>

				</div>
			</div>
		</div>
		
	</div>
</div>
